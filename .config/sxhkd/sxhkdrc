super + slash
	mpc toggle

# dunstctl shortcuts
super + alt + d; { c, a, t, h, i, p }
	dunstctl { close, close-all, context, history-pop, is-paused, set-paused "toggle"}


super + alt + w
  tabbed surf -e

super + shift + Return;
  tabbed -r 2 st -w ''

super + shift + b
  set-wallpaper

super + shift + c
  gen-color-scheme
